/**index.wxss**/
@import '/pages/template/template.wxss';

.totalcontainer {
  display: -webkit-flex; /* Safari */
  display: flex;
  flex-direction: column;
}

/* 地址栏 */

.current_adress {
  height: 64rpx;
  width: 100%;
  background-color: #09dcc6;
  display: flex;
  flex-direction: row;
  align-items: baseline;
}

.current_adress text {
  color: #fff;
  font-size: 30rpx;
  line-height: 64rpx;
}

.current_adress image {
  width: 26rpx;
  height: 18rpx;
  margin-left: 10rpx;
}

/* 搜索 */

.search {
  background-color: #09dcc6;
  height: 74rpx;
}

.search_arr {
  width: 96%;
  border: 1px solid #e6fdf8;
  border-radius: 10rpx;
  margin: auto;
  background-color: #e6fdf8;
}

.search_arr input {
  margin-left: 80rpx;
  height: 60rpx;
}

.searchcion {
  margin: 10rpx 10rpx 10rpx 10rpx;
  position: absolute;
  left: 25rpx;
  z-index: 2;
  width: 20px;
  height: 20px;
  text-align: center;
}

/* 轮播图 */

swiper {
  height: 400rpx;
  width: 100%;
  padding: 1rpx;
  background-color: #fff;
}

swiper-item image {
  width: 100%;
}

/* 菜品分类 */

.classify {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
  height: 100rpx;
}

.classify picker {
  margin-left: 40rpx;
}

.classify picker image {
  height: 40rpx;
  width: 40rpx;
  margin-left: 16rpx;
  vertical-align: middle;
}

.classtext {
  margin-left: 40rpx;
  font-size: 34rpx;
}

/* 评分综合导航栏 */

.classcolor {
  color: #09dcc6;
}
.classort {
  background-color: #fafafa;
  height: 84rpx;
}
.isfixed {
  position: fixed;
  top: 0;
  z-index: 999;
  width: 100%;
}
.scrolltext {
  white-space: nowrap;
}

.navtext {
  font-size: 36rpx;
  width: 25%;
  display: inline-block;
  line-height: 84rpx;
  text-align: center;
  border-bottom: solid 1rpx #e1e1e1;
  border-top: solid 1rpx #e1e1e1;
}

.navtext.active {
  border-bottom: solid 1px #09dcc6;
  color: #09dcc6;
  font-weight: bold;

}

